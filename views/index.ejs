<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico">

    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">

    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.3/js/bootstrap.min.js"></script>
    <title>WebRTC DC</title>
    <script>
        const ROOM_ID = '<%=roomId %>'
    </script>
    <%- include("./settings") %>
        <%- include("./fileshare") %>
</head>

<body>
    <div class="header">
        <div class="logo">
            <img class="img__logo" src="logo.svg" alt="">
        </div>
        <div class="nav__container">
            <div class="fileshare" data-toggle="modal" data-target="#fileshareModal">
                <i class="far fa-file"></i>
            </div>
            <div class="setting" data-toggle="modal" data-target="#settingModal">
                <i class="fas fa-cog"></i>
            </div>
        </div>
    </div>
    <div class="main">
        <div class="main__left">
            <div class="videos__group">
                <div id="video-grid">
                    <div id="local__video__container">

                    </div>
                    <div id="remote__video__container">

                    </div>
                </div>
            </div>
            <div class="options">
                <div class="options__left">
                    <div id="muteVideo" class="options__button">
                        <i id="videoIcon" class="fas fa-video"></i>
                    </div>
                    <div id="muteAudio" class="options__button">
                        <i id="audioIcon" class="fa fa-microphone"></i>
                    </div>
                    <div id="showChat" class="options__button">
                        <i class="fa fa-comment"></i>
                    </div>
                    <div id="speechRecognition" class="options__button">
                        <i class="fas fa-headset"></i>
                    </div>
                    <div id="shareScreen" class="options__button">
                        <i class="fas fa-share-square"></i>
                    </div>
                    <div id="flipCamera" class="options__button">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <div id="copyUrl" class="options__button">
                        <i class="far fa-clipboard"></i>
                    </div>
                </div>
                <div class="options__right">
                    <div id="room__out" class="options__button">
                        <i class="fas fa-sign-out-alt"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="main__right">
            <div class="main__header">
                <div class="header__back">
                    <i class="fas fa-angle-left"></i>
                </div>
            </div>
            <div class="main__chat_window">
                <div class="messages" id="messages"></div>
            </div>
            <div class="main__message_container">
                <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here..."
                    maxlength="100">
                <div id="send" class="options__button">
                    <i class="fas fa-paper-plane" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>

    <script src="peerConnection.js"></script>
    <script src="chat.js"></script>
    <script src="videoChat.js"></script>
    <script src="videoMute.js"></script>
    <script src="screenShare.js"></script>
    <script src="speechRecognition.js"></script>
    <script src="fileShare.js"></script>
</body>

</html>